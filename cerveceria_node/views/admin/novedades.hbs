<div class="container" style="margin-top: 100px;">
    {{!-- {fila 1} --}}
    <div class="row">
        <div class="col">
            <p class="text-end">
                <span>Hola {{usuario}}!</span>
                <a href="/admin/login/logout" class="btn btn-danger">Cerrar sesión <i
                        class="fas fa-sign-out-alt"></i></a>
            </p>
        </div>
    </div>
    {{!-- {{inicio fila 2}} --}}
    <div class="row mb-3">
        <div class="col-7" style="margin-top:-9px ;">
            <h2>Listado de novedades</h2>
        </div>
        <div class="col-5 text-end">
            <a href="/admin/novedades/agregar" class="btn btn-success"><i class="fas fa-plus"></i>Nuevo</a>
        </div>
    </div>
    {{!-- {{fin de fila 2}} --}}
    {{!-- {{inicio fila 3}} --}}
    <div class="row">
        <div class="col">
            <table class="table">
                <thead class="table-dark">
                    <tr>
                        <th scope="col">#</th>
                        <th scope="col">Título</th>
                        <th scope="col" class="text-end">Acciones</th>
                    </tr>
                </thead>
                <tbody>
                    {{#each novedades}}
                    <tr>
                        <th scope="row">{{id}}</th>
                        <td>{{titulo}}</td>
                        <td class="text-end">
                            <a href="/admin/novedades/modificar/{{id}}" class="btn btn-secondary">
                                <i class="fas fa-pencil-alt"></i>
                            </a>
                            </a>
                            <a href="/admin/novedades/eliminar/{{id}}" class="btn btn-secondary">
                                <i class="fas fa-trash"></i>
                            </a>
                        </td>
                    </tr>
                    {{/each}}
                </tbody>
            </table>
        </div>
    </div>
    {{!-- {{fin fila 3}} --}}
</div>