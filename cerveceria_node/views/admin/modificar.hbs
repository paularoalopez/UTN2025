<div class="container" style="margin: 100px auto;">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h4 class="mb-4 text-center">Modificar Novedad</h4>
            <form action="/admin/novedades/modificar" method="post">

            <input type="hidden" value="{{novedad.id}}" name="id">
{{!-- INICIO TITULO --}}
                <div class="mb-3">
                    <label class="form-label">Título</label>
                    <input type="text" class="form-control" name="titulo" value="{{novedad.titulo}}">
                </div>
{{!-- FIN TITULO --}}
{{!-- INICIO SUBTITULO --}}
                <div class="mb-3">
                    <label class="form-label">Subtítulo</label>
                    <input type="text" class="form-control" name="subtitulo" value="{{novedad.subtitulo}}">
                </div>
{{!-- FIN SUBTITULO --}}
{{!-- INICIO CUERPO --}}
                <div class="mb-4">
                    <label class="form-label">Cuerpo</label>
                    <textarea class="form-control" rows="5" name="cuerpo">{{novedad.cuerpo}}</textarea>
                </div>
{{!-- FIN CUERPO --}}
{{!-- BOTON GUARDAR --}}
                <div class="d-grid"> <button type="submit" class="btn btn-primary btn-lg">Modificar</button>
                </div>
            </form>

            {{#if error}}
            <p class="text-danger mt-3 text-center">{{message}}</p>
            {{/if}}
{{!-- BOTON GUARDAR --}}
        </div>
    </div>
</div>